# =============================================================================
# Agent-in-a-Box Environment Variables
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agentinabox

# AI Provider API Keys
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# =============================================================================
# OAuth Configuration
# =============================================================================

# Google OAuth (for Gmail, Calendar, Docs, Sheets)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URIs: {BASE_URL}/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# QuickBooks OAuth (for accounting/invoicing)
# Create app at: https://developer.intuit.com/
# Redirect URI: {BASE_URL}/api/auth/qbo/callback
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_ENVIRONMENT=sandbox  # 'sandbox' or 'production'

# =============================================================================
# Licensing (optional)
# =============================================================================
LICENSE_KEY=

# =============================================================================
# Additional Integrations (optional)
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Microsoft Teams Integration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=
