{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "../server/node_modules",
    "typeRoots": ["../server/node_modules/@types", "../server/node_modules"]
  },
  "include": ["*.ts"],
  "exclude": ["dist"]
}
